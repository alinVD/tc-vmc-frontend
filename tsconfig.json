{
    "compilerOptions": {
        "alwaysStrict": true,
        "declaration": true,
        "lib": [
            "dom",
            "es2015"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "outDir": "./dist/",
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "pretty": true,
        "removeComments": true
    },
    "files": [
        "src/index.ts",
    ]
}